# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.jsx]
indent_size = 2

[*.js]
indent_size = 2

[*.less]
indent_size = 2

[*.css]
indent_size = 2

[*.json]
indent_size = 2

[Makefile]
indent_style = tab
